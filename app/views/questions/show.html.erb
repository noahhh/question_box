<p id="notice"><%= notice %></p>

<p>
  <strong>Question Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Question:</strong>
  <%= @question.text %>
</p>

<p>
  <strong>Answer:</strong>
  <%= @answer.text %>
</p>

<%= form_for(@answer) do |f| %>
  <p>
    <%= f.hidden_field :user, :value => @current_user %>
  </p>
  <p>
    <%= f.label :text %>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %>

<%= link_to 'Back', root_path %>
